@model CP_MVC.Models.IndexView
@{ 
    ViewBag.Title = "Index";
}

<div class="container-fluid">
    <div row>
        <div class="col-md-12">
            <h1 class="text-center full"><b>公告事項</b></h1>
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th class="col-md-2">日期</th>
                        <th class="col-md-10">訊息</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.TopWebMessageList) {
                    <tr>
                        <td><b>@item.WebMessageDate</b></td>
                        <td><b>@item.WebMessageContent </b></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">

            <div class="jumbotron" style="background-image:url(/image/bookbord.jpg)">
                <div class="container-fluid bg-3 text-center">
                    <h2><b>人氣推薦</b></h2><br>
                    <div class="row">
                        @foreach (var item in Model.TopBookList) {
                        <div class="col-sm-4">
                            <img src="~/image/@item.BookPicture" class="img-responsive" style="width:100%">
                            <h4><b>@item.BookName</b></h4>
                        </div>
                        }
                    </div>
                </div>

            </div>

        </div>

        <div class="col-md-6">

            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                    <li data-target="#myCarousel" data-slide-to="3"></li>
                    <li data-target="#myCarousel" data-slide-to="4"></li>
                    <li data-target="#myCarousel" data-slide-to="5"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">

                    <div class="item active">

                        <img src="~/image/test1.jpg" style="width:100%">

                    </div>

                    <div class="item">
                        <img src="~/image/test2.jpg" style="width:100%">
                    </div>

                    <div class="item">
                        <img src="~/image/test3.jpg" style="width:100%">
                    </div>

                    <div class="item">

                        <img src="~/image/test4.jpg" style="width:100%">

                    </div>

                    <div class="item">
                        <img src="~/image/test5.jpg" style="width:100%">
                    </div>

                    <div class="item">
                        <img src="~/image/test6.jpg" style="width:100%">
                    </div>

                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

        </div>
    </div>
</div>

